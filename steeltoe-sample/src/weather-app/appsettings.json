{
  "spring": {
    "application": {
      "name": "weather-app"
    },
    "cloud": {
      "inet": {
        "SkipReverseDnsLookup": false
      }
    }
  },

  "eureka": {
    "client": {
      "shouldFetchRegistry": true,
      "shouldRegisterWithEureka": false
    },
    "instance" : {
      "UseNetUtils": true
    }
  },

  "management": {
    "tracing": {
      "alwaysSample": true,
      "useShortTraceIds ": true,
      "exporter": {
        "zipkin": {
          "validateCertificates": false,
          "useShortTraceIds ": true
        }
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Steeltoe": "Information"
    }
  },
  "AllowedHosts": "*"
}
